#! /bin/sh
usage_error () {
  cat << EOF
------------------------------------------------------------------
Name: bd
Version: 1.0

------------------------------------------------------------------
Description: Go back to a specified directory up in the hierarchy.

------------------------------------------------------------------
How to use:

Please refer https://github.com/vigneshwaranr/bd

EOF
}

newpwd() {
  oldpwd=$1
  if [ "$2" = -s ]
  then
    pattern=$3
    NEWPWD=$(echo $oldpwd | sed 's|\(.*/'$pattern'[^/]*/\).*|\1|')
  elif [ "$2" = -si ]
  then
    pattern=$3
    NEWPWD=$(echo $oldpwd | perl -pe 's|(.*/'$pattern'[^/]*/).*|$1|i')
  else
    pattern=$2
    NEWPWD=$(echo $oldpwd | sed 's|\(.*/'$pattern'/\).*|\1|')
  fi
}

if [ $# -eq 0 ]
then
  usage_error
elif [ "${@: -1}" = -v ]
then
  usage_error
else
  oldpwd=$(pwd)

  newpwd "$oldpwd" "$@"
  
  if [ "$NEWPWD" = "$oldpwd" ]
  then
    echo "No such occurrence."
  else
    echo $NEWPWD
    cd "$NEWPWD"
  fi
  unset NEWPWD
fi
